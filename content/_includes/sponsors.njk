{% macro sponsor_icon(sponsor) %}
<div class="sponsor ; flex-1 flex m-0.5 sm:m-2">
  <a href="{{ sponsor.url }}" title="{{ sponsor.name }}" class="; flex-1 mr-1 flex-col">
    <div class="flex justify-center">
      <img src="{{ sponsor.image }}" alt="{{ sponsor.name }}" class="; shadow-md rounded-lg m-0 self-center" />
    </div>
    {% if sponsor.name != 'Become a Sponsor' %}<div class="text-center leading-none text-xs mt-3 hidden sm:block">{{ sponsor.name }}</div>{% endif %}
  </a>
</div>
{% endmacro %}

{% macro sponsor_section(level, title) %}
<div>
  <h3 class="; text-center">{{ title }}</h3>
  <div class="; flex flex-wrap">
    {% for sponsor in sponsors[level] %}
    {{ sponsor_icon(sponsor) }}
    {% endfor %}
  </div>
</div>
{% endmacro %}

