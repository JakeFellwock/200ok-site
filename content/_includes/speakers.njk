{% macro speaker_section(speaker) %}
<article class="speaker sm:flex items-center flex-row-reverse mb-24 sm:mb-12 ">
    <div class="sm:w-1/2 xl:w-3/4 mb-4 sm:mb-0 sm:pl-6">
        <h2 class="font-bold text-xl sm:text-3xl mt-0 " style="padding-top: 0;">{{ speaker.talkTitle }}</h2>
        <h3 class="text-lg sm:text-xl text-md">
            <span class="block text-base sm:text-lg">{{ speaker.name }}</span>
            <a href="{{speaker.URL}}" class="block text-base sm:text-lg">{{speaker.website}}</a>
        </h3>
    </div>
    <img src="{{ speaker.headshotURL }}" alt="{{ speaker.name }}" class="w-full sm:w-1/2 xl:w-1/4 block" />
</article>
{% endmacro %}


<section class="pt-8">
  {% for speaker in speakers %}
    {{ speaker_section(speaker) }}
  {% endfor %}
</section>
