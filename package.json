{
  "private": true,
  "scripts": {
    "clean": "rimraf public",
    "build": "npm-run-all clean build:postcss build:eleventy",
    "build:postcss": "TAILWIND_MODE=build postcss src/assets/css/index.css -o assets/css/index.css",
    "build:eleventy": "npx @11ty/eleventy",
    "dev": "npm-run-all clean --parallel dev:*",
    "dev:postcss": "TAILWIND_MODE=watch postcss src/assets/css/index.css -o assets/css/index.css -w",
    "dev:eleventy": "npx @11ty/eleventy --serve",
    "netlify:dev": "NETLIFY=true netlify dev"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "@tailwindcss/jit": "^0.1.18",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "js-yaml": "^4.0.0",
    "netlify-cli": "^3.13.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.4",
    "watch": "^1.0.2"
  }
}
